<div class="row">
    <div class="col-8">
        <h2 class="text-primary">Create Trail</h2>
    </div>
    <div class="col-4">
        <a asp-action="Upsert" class="form-control btn btn-secondary">
            <i class="fas fa-plus"></i>&nbsp; Add Trail
        </a>
    </div>
</div>
